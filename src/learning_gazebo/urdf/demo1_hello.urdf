<robot name="mycar">
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.5 0.3 0.1"/>    
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <material name="yellow">
                <color rgba="0.5 0.3 0.0 0.5"/>
            </material>
        </visual>
        <!-- 碰撞参数 若果是标准几何体,直接复制geometry and origin-->
        <collision>
            <geometry>
                <box size="0.5 0.3 0.1"/>    
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </collision>
        <!-- 惯性矩阵 -->
        <inertial>
            <!-- 重心偏移量 -->
            <origin xyz='0 0 0'/> 
            <mass value="2.0"/>
            <!-- attention 'inertia' not 'inertial' please! -->
            <inertia ixx='1' ixy='0' ixz='0' iyy='0' iyz='1' izz='1' />
        </inertial>
    </link>
    <!-- gazebo 有自己的颜色设置 -->
    <gazebo reference='base_link' >
        <material>Gazebo/Red</material>
    </gazebo>
</robot>